# Simple Dockerfile for Render deployment
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package.json
COPY package.json ./

# Install dependencies with basic settings
RUN npm install --production=false

# Copy source code
COPY . .

# Build the app
RUN npm run build

# Install serve to run the app
RUN npm install -g serve

# Expose port
EXPOSE 80

# Serve the built app
CMD ["serve", "-s", "dist/retail-analytics-ui", "-l", "80"]